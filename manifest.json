{
    "name": "Tales of Gressenheller: Nodes & Secrets",
    "version": "1.0",
    "description": "Find a path to the truth!",
    "manifest_version": 2,
    "incognito": "split",
    "icons": {
      "128": "images/icon-128.png"
      },
    "permissions": [
      "storage",
      "downloads",
      "tabs"
    ],
    "web_accessible_resources": [
      "images/coin.png",
      "images/coin-hd.png",
      "audio/coin.mp3",
      "audio/solvingJingles/*.mp3",
      "images/wealth/*.png",
      "images/characters/ether/*",
      "images/dialogueBox.png",
      "images/puzzles/*",
      "images/deduction/*",
      "images/blackScreen.png",
      "fonts/righteous.ttf",
      "scripts/puzzles/puzzle001.json",
      "images/puzzles/PuzzleDescriptionBackground.png",
      "images/puzzles/PuzzlePicaratsBG.png",
      "images/puzzles/PuzzleTitleBG.png"
    ],
    "background": {
      "scripts": ["scripts/jquery-3.6.3.min.js"],
      "persistent": false
    }, 
    "content_scripts": [
    {
        "css": ["styles/puzzles.css", "styles/style.css"],
        "js": ["scripts/jquery-3.6.3.min.js", "scripts/puzzles/puzzle001.js", "scripts/puzzles.js", "scripts/utilities.js", "scripts/characterAnimation.js", "scripts/coinManager.js", "scripts/content.js"],
        "matches": ["https://*/*"]
    }
    ]
  }